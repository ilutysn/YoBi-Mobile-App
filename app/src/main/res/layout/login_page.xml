<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundYobi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_login"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-101dp" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="240dp"
        android:layout_height="49dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/backgroundYobi"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="241dp"
        android:layout_height="49dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/backgroundYobi"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/backgroundYobi"
        app:layout_constraintTop_toTopOf="@+id/backgroundYobi" />


    <Button
        android:id="@+id/Login"
        android:layout_width="104dp"
        android:layout_height="56dp"
        android:layout_marginTop="532dp"

        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/black"

        android:text="Login"
        android:textColor="@color/white"
        app:backgroundTint="@color/black"
        app:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/backgroundYobi"
        app:layout_constraintTop_toTopOf="@+id/backgroundYobi" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login">


    </LinearLayout>

    <TextView
        android:id="@+id/register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="register"
        android:text="Daftar disini"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="614dp" />

    <TextView
        android:id="@+id/akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Belum memiliki akun? "
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="614dp" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="260dp"
        android:layout_height="208dp"
        app:srcCompat="@mipmap/ic_iconyobi_foreground"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="88dp" />


</androidx.constraintlayout.widget.ConstraintLayout>